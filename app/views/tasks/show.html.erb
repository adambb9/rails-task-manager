<h2><%= @task.title %></h2>
<div class="container">
  <p><%= @task.details %></p>
  <p><%= @task.completed %></p>

  <%= link_to "Edit #{@task.title}",
            edit_path(@task) %>
  <%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
  <div class="backlink">
    <a href="/tasks">Back to list</a>
  </div>
</div>
